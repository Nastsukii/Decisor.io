/* import React, { useState, useEffect } from 'react';
import { ArrowRight, CheckCircle, Lock, MessageCircle, ShieldCheck, AlertCircle, ChevronRight, Loader2, ArrowLeft, X, Globe } from 'lucide-react';

// --- TYPES & INTERFACES (TypeScript) ---

type ViewState = 'landing' | 'quiz' | 'paywall' | 'result';
type Language = 'en' | 'pt';

interface Option {
  label: string;
  value: number;
}

interface Question {
  id: number;
  text: string;
  type: 'radio' | 'number';
  options?: Option[];
  min?: number;
  max?: number;
}

interface ResultContent {
  title: string;
  desc: string;
  color: string;
  bg: string;
  borderColor: string;
  icon: React.ReactNode;
}

// --- TRANSLATIONS & DATA ---

const CONTENT = {
  en: {
